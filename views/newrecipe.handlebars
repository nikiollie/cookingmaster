<!doctype html>

<html>
<head>
	<title>Cooking Master</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/styles.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
  <script>
    function validateForm() {
  var x = document.forms["myForm"]["dish"].value;
  console.log(x)
  if (x == "") {
    alert("Dish must be filled out");
    return false;
  }
}
</script>

</head>

<body>
	<div id="home">
		<a href="/index">
		  <input type="image" src="/images/home_logo.png" alt="Home" id="homepic">
		</a>
  </div>
	<div id="account">
        <a href="/account">
            <input type="image" src="/images/account.png" alt="Account" id="accountpic">
        </a>
  	</div>
    <br>
    <br>
  <div class = "d-flex justify-content-center">
    <div class = "box">
          <h1 class="title">New Recipe</h1>
          <form name="myForm" action="">
              <label class="input">What would you like to cook:</label><br>
              <input type="text" id="dish" name="dish" value="{{dish}}" required/><br>
              <label class="input">Serving Size:</label><br>
              <input type="number" id="serving" name="serving" value="{{serving}}" required/><br><br>
              <label class="input">(Optional) Any specific ingredients? If multiple, separate with comma:</label><br>
              <input type="text" id="optional" name="optional" value="{{optional}}"><br><br>
              <!-- <input type="submit" value="Find Recipe!"> -->
              <center><p id="patient" class="input">Please be patient!!</p></center>
            </form>
            
              <div class = "buttons">
                <a href="#">
                  <button class="button" id="findRecipe" onclick= "validateForm()">Find Recipe</button>
                </a>
              </div>

    </div>
  </div>
  
  <script src="https://code.jquery.com/jquery.js"></script>
  <script src="js/getrecipe.js"></script>
  <div id="question">
