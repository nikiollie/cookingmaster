<!doctype html>

<html>
<head>
	<title>Cooking Master</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/styles.css" rel="stylesheet">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery.js"></script>
    {{!-- <script src="/js/save.js"></script> --}}
</head>

<body>
	<div id="account">
        <a href="/account">
            <input type="image" src="/images/account.png" alt="Account" id="accountpic">
        </a>
  	</div>
	<div class = "d-flex justify-content-center align-items-center center">
		{{!-- <form action="/saveRecipe" method="post" class = "d-flex justify-content-center align-items-center center"> --}}
			<h1 class="title" name="recipeName" id="recipeName">{{recipeName}}</h1>
			<a href="{{url}}" name="url" id="url" target="_blank">Recipe Source</a>
			<p id="serving">Desired Serving Size: {{serving}}</p>
			<label class="input" href="newrecipe">INGREDIENTS:</label><br>
			<ul class="input">
				<li name="ingredients" id="ingredients" class="ingredients">{{ingredients}}</li>
			</ul>
			<label class="input" href="newrecipe">INSTRUCTIONS:</label><br>
			<ul class="input">
				<li name="instructions" id="instructions" class="instructions">{{instructions}}</li>
			</ul>
		
			<div class = "d-flex justify-content-center align-items-center center" >        
					<a href="/newrecipe">
						<button class="button" value="NewRecipe">Edit Recipe</button>
					</a>
					<br>
					<a href="/savedrecipes">
					<button type="submit" class="button" id="saverecipe" value="SavedRecipes">Save Recipe</button>
					</a>
			</div>
		{{!-- </form> --}}
    
  	</div>
	<div id="home">
		<a href="/index">
		  <input type="image" src="/images/home_logo.png" alt="Home">
		</a>
  </div>
	<script src="https://code.jquery.com/jquery.js"></script>
</body>
</html>