<!doctype html>

<html>
<head>
	<title>Cooking Master</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/styles.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery.js"></script>
    <script type="module" src="/js/save.js"></script>


</head>

<body>
	<div id="home">
		<a href="/index">
		  <input type="image" src="/images/home_logo.png" alt="Home" id="homepic">
		</a>
  </div>
	<div id="account">
        <a href="/account">
            <input type="image" src="/images/account.png" alt="Account" id="accountpic">
        </a>
  	</div>
    <div class = "d-flex justify-content-center align-items-center center">        
        <h1 class="title">Saved Recipes</h1>
       
    		{{#each recipes}}
            <br>
            <div class="recipe" id="{{recipeName}}">
                <form action="/displaysavedrecipe" method="get">
					{{!-- for sending info to saved recipes page  --}}
                    <input name="dish" id="dish" class = "hide" value="{{dish}}">
                    <input name="optional" id="optional" class = "hide" value="{{optional}}">
					<input name="recipeName" id="recipeName" class = "hide" value="{{recipeName}}">
					<input name="url" id="url" class = "hide" value="{{url}}">
					<input name="ingredients" id="ingredients" class = "hide" value="{{ingredients}}">
					<input name="instructions" id="instructions" class = "hide" value="{{instructions}}">
					<input name="serving" id="serving" class = "hide" value="{{serving}}">
                    <button type="submit" class="button">{{recipeName}}</button>
                    <button id="remove" class="button">X</button>
				</form>
            </div>
		    {{/each}}

    </div>

</body>
</html>