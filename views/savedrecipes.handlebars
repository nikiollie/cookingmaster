<!doctype html>

<html>
<head>
	<title>Cooking Master</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/styles.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">


</head>

<body>
    <div id="account">
        <a href="account">
            <input type="image" src="/images/account.png" alt="Account" id="accountpic">
        </a>
    </div>
    <div class = "d-flex justify-content-center align-items-center center">        
        <h1 class="title">Saved Recipes</h1>
       
            <div class = "buttons" class="swd-button">
                <a href="recipe">
                    <button class="button" value="recipe">Pumpkin Pie</button>
                </a>
            </div>
            <input class="swd-button" type="image" width="50" height="50" src="images/red_x.png" name="saveForm" class="btTxt submit" id="saveForm"></input>
    
    		{{#each recipes}}
            <h1>{{recipeName}}</h1>
		    {{/each}}

    </div>
    <div id="home">
        <a href="/index">
            <input type="image" src="/images/home_logo.png" alt="Home">
        </a>
    </div>
</body>
</html>